<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_estate_property_offers" model="ir.ui.view">
        <field name="name">estate_property_offer</field>
        <field name="model">estate_property_offer</field>
        <field name="arch" type="xml">
            <tree string="Offers_tree">
                <field name="price" string="Price"/>
                <field name="partner_id" string="Partner"/>
                <field name="status" string="Status"/>
                <field name="validity" string="Validity"/>
                <field name="date_deadline" string="Deadline"/>
                <button name="action_to_accept" type="object" icon="fa-check"/>
                <button name="action_to_refuse" type="object" icon="fa-times"/>
            </tree>
        </field>
    </record>
    <record id="view_estate_property__offer_form" model="ir.ui.view">
        <field name="name">estate_property_offer</field>
        <field name="model">estate_property_offer</field>
        <field name="arch" type="xml">
            <form string="Offers_form">
                <sheet>
                    <group>
                        <field name="price" string="Price"/>
                        <field name="partner_id" string="Partner"/>
                        <field name="status" string="Status"/>
                        <field name="validity" string="Validity"/>
                        <field name="date_deadline" string="Deadline"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>